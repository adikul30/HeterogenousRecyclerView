<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/lecture_time"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="9:00" />

    <TextView
        android:id="@+id/lectureSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/lecture_time"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="OS" />

    <TextView
        android:id="@+id/lectureTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lectureSubject"
        android:layout_toEndOf="@id/lecture_time"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        tools:text="Prof.Name Surname" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/lectureRoom"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="CR1" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/lectureTeacher"
        android:background="#7000" />

</RelativeLayout>